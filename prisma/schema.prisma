generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Post {
  id         Int       @id @default(autoincrement())
  titulo     String
  conteudo   String
  autorId    Int
  publicado  Boolean?
  created_at DateTime? @default(now())
  users      User      @relation(fields: [autorId], references: [id])

  @@index([autorId], name: "autorId")
  @@map(name: "posts")
}

model User {
  id         Int       @id @default(autoincrement())
  nome       String
  email      String
  created_at DateTime? @default(now())
  posts      Post[]
  @@map(name: "users")
}
