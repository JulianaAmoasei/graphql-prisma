generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = "***"
}

model posts {
  id         Int       @id @default(autoincrement())
  titulo     String
  conteudo   String
  autorId    Int
  publicado  Boolean?
  created_at DateTime? @default(now())
  autor      users      @relation(fields: [autorId], references: [id])

  @@index([autorId], name: "autorId")
  @@map(name: "Post")
}

model users {
  id         Int       @id @default(autoincrement())
  nome       String
  email      String
  created_at DateTime? @default(now())
  posts      posts[]

  @@map(name: "User")
}

model reviews {
  id            Int      @default(autoincrement()) @id
  postId        Int
  post          posts     @relation(fields: [postId], references: [id])
  reviewerId    Int
  reviewer      users     @relation(fields: [reviewerId], references: [id])
  aprovado      Boolean  @default(false)
  nota          Int

    @@map(name: "Review")
}